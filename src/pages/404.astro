---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-6">Page Not Found</h2>
    <p class="text-slate-600 dark:text-slate-400 mb-8 max-w-md">
      Oops! The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-flex items-center px-4 py-2 rounded-md bg-slate-900 dark:bg-slate-50 text-slate-50 dark:text-slate-900 hover:bg-slate-800 dark:hover:bg-slate-200 transition-colors"
    >
      Return Home
    </a>
  </div>
</Layout> 