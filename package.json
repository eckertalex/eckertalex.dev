{
  "name": "eckertalex.dev",
  "version": "2.2.0",
  "license": "MIT",
  "author": {
    "name": "Alexander Eckert",
    "email": "eckertalex@protonmail.com",
    "url": "https://eckertalex.dev"
  },
  "scripts": {
    "// --- DEVELOP ---": "",
    "dev": "next",
    "// --- BUILD ---": "",
    "build": "next build",
    "start": "npm run build && next start",
    "// --- ANALYZE ---": "",
    "analyze": "ANALYZE=true npm run build",
    "// --- EXPORT ---": "",
    "export": "npm run build && next export",
    "// --- CLEAN ---": "",
    "clean": "rimraf .mdx-data .next out",
    "clean:dangerous": "rimraf node_modules package-lock.json .mdx-data .next out",
    "// --- RELEASING ---": "",
    "release": "HUSKY_SKIP_HOOKS=1 CI=true standard-version --no-verify",
    "// --- CODE STYLE ---": "",
    "check-types": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix .",
    "lint:css": "stylelint styles/**/*.css",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint:css lint"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.22",
    "next": "^10.0.3",
    "next-mdx-enhanced": "^5.0.0",
    "next-seo": "^4.17.0",
    "nprogress": "^0.2.0",
    "prism-react-renderer": "^1.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reading-time": "^1.2.1",
    "remark-autolink-headings": "^6.0.1",
    "remark-slug": "^6.0.0",
    "tinytime": "^0.2.6",
    "use-dark-mode": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@next/bundle-analyzer": "^10.0.3",
    "@types/classnames": "^2.2.11",
    "@types/node": "^14.14.13",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@zeit/next-source-maps": "0.0.3",
    "autoprefixer": "^10.1.0",
    "babel-plugin-import-glob-array": "^0.2.0",
    "commitiquette": "^1.0.8",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "devmoji": "^2.1.13",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "feed": "^4.2.1",
    "globby": "^11.0.1",
    "gray-matter": "^4.0.2",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "next-compose-plugins": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "tailwindcss": "^1.9.6",
    "tailwindcss-dark-mode": "^1.1.7",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && pretty-quick --staged && lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook && devmoji -e --lint || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "commitiquette"
    }
  }
}
