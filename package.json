{
  "name": "eckertalex.dev",
  "description": "Personal blog by Alexander Eckert. I write about React, JavaScript, and TypeScript.",
  "version": "3.0.0",
  "author": {
    "name": "Alexander Eckert",
    "email": "me@eckertalex.dev",
    "url": "https://eckertalex.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eckertalex/eckertalex.dev.git"
  },
  "scripts": {
    "dev": "next",
    "build": "next build && node ./scripts/generate-sitemap",
    "prestart": "npm run build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix .",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json|ts|tsx)\" --write",
    "validate": "npm-run-all --parallel format lint"
  },
  "dependencies": {
    "@mdx-js/loader": "1.6.22",
    "@mdx-js/react": "1.6.22",
    "@next/mdx": "10.0.6",
    "@tailwindcss/forms": "0.2.1",
    "@tailwindcss/typography": "0.4.0",
    "autoprefixer": "10.2.4",
    "gray-matter": "4.0.2",
    "image-size": "0.9.3",
    "next": "10.0.6",
    "next-mdx-remote": "2.1.3",
    "next-seo": "4.18.0",
    "next-themes": "0.0.10",
    "preact": "10.5.12",
    "prism-react-renderer": "1.1.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "reading-time": "1.3.0",
    "remark-autolink-headings": "6.0.1",
    "remark-slug": "6.0.0",
    "remark-toc": "7.1.0",
    "tailwindcss": "2.0.2",
    "tinytime": "0.2.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "10.0.6",
    "@svgr/webpack": "5.5.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "globby": "11.0.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "next-compose-plugins": "2.2.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "rehype": "11.0.0",
    "remark-frontmatter": "3.0.0",
    "remark-parse": "9.0.0",
    "remark-stringify": "9.0.1",
    "unified": "9.2.0",
    "unist-util-visit": "2.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  }
}
